extends layout

block styles
  link(rel="stylesheet", href="/stylesheets/index.css")

block content
  main 
    #myCarousel.carousel.slide.mb-0(data-bs-ride="carousel")

      .carousel-indicators
        button.active(type="button", data-bs-target="#myCarousel", data-bs-slide-to="0", aria-current="true", aria-label="Slide 1")
        button(type="button", data-bs-target="#myCarousel", data-bs-slide-to="1", aria-label="Slide 2")
        button(type="button", data-bs-target="#myCarousel", data-bs-slide-to="2", aria-label="Slide 3")

      .carousel-inner
        // Первый слайд
        .carousel-item.active
          img.d-block.w-100(src="/images/index_roll_1.jpg" alt="Первое фото")
          .container
            .carousel-caption.text-start
              h1 Planets of the Solar System
              p Explore the planets closest to us.
              p
                a.btn.btn-lg.btn-primary(href="/planets") Discover

        // Второй слайд
        .carousel-item
          img.d-block.w-100(src="/images/index_roll_2.jpg" alt="Второе фото")
          .container
            .carousel-caption
              h1 Aartificial satellites Tracking
              p Observe the positions of hundreds of artificial satellites around the Earth in real time.
              p
                a.btn.btn-lg.btn-primary(href="#") Observe

        // Третий слайд
        .carousel-item
          img.d-block.w-100(src="/images/index_roll_3.jpg" alt="Третье фото")
          .container
            .carousel-caption.text-end
              h1 Galaxies, black holes, and more
              p Learn about different celestial bodies
              p
                a.btn.btn-lg.btn-primary(href="#") 

      button.carousel-control-prev(type="button", data-bs-target="#myCarousel", data-bs-slide="prev")
        span.carousel-control-prev-icon(aria-hidden="true")
        span.visually-hidden Previous
      button.carousel-control-next(type="button", data-bs-target="#myCarousel", data-bs-slide="next")
        span.carousel-control-next-icon(aria-hidden="true")
        span.visually-hidden Next
